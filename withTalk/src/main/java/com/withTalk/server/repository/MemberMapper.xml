<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.withTalk.server.repository.MemberMapper">
	<resultMap id="memberResultMap"
		type="com.withTalk.server.model.Member">
		<result column="ID" property="id" />
		<result column="NAME" property="name" />
		<result column="PASSWORD" property="password" />
		<result column="PHONE_NO" property="phoneNo" />
	</resultMap>

	<sql id="whereSql">
		<where>
			<if test="id != null and id != ''">
				AND ID = #{id}
			</if>
			<if test="name != null and name != ''">
				AND NAME = #{name}
			</if>
			<if test="password != null and password != ''">
				AND PASSWORD = #{password}
			</if>
			<if test="phoneNo != null and phoneNo != ''">
				AND PHONE_NO = #{phoneNo}
			</if>
		</where>
	</sql>

	<select id="select"
		parameterType="com.withTalk.server.model.Member"
		resultMap="memberResultMap">
		SELECT
		ID
		, PASSWORD
		, NAME
		, PHONE_NO
		FROM MEMBER
		<include refid="whereSql" />
		ORDER BY ID
	</select>

	<select id="count"
		parameterType="com.withTalk.server.model.Member" resultType="int">
		SELECT
		COUNT(*)
		FROM MEMBER
	</select>

	<insert id="insert"
		parameterType="com.withTalk.server.model.Member">
		INSERT INTO MEMBER 
		VALUES (
		#{id}
		, #{name}
		, #{password}
		, #{phoneNo}
		)
	</insert>
</mapper>